{
  "name": "obsidian-infographic-viz",
  "version": "1.0.0",
  "description": "Beautiful infographics with @antv/infographic. Right-click to export PNG/SVG, copy to clipboard, and use official themes.",
  "main": "main.js",
  "scripts": {
    "dev": "bun run esbuild.config.mjs",
    "build": "bun run esbuild.config.mjs production",
    "watch": "bun run esbuild.config.mjs development --watch",
    "copy": "bun run build && node scripts/copy-local.mjs",
    "lint": "eslint .",
    "type-check": "tsc -noEmit -skipLibCheck",
    "release": "bun run build && node version-bump.mjs",
    "version": "node version-bump.mjs && git add manifest.json versions.json"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "infographic",
    "visualization",
    "diagram",
    "chart",
    "timeline",
    "hierarchy",
    "antv"
  ],
  "author": "Coffee",
  "license": "MIT",
  "dependencies": {
    "@antv/infographic": "^0.2.13"
  },
  "devDependencies": {
    "@eslint/js": "^9",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@typescript-eslint/utils": "^8.35.1",
    "builtin-modules": "3.3.0",
    "esbuild": "0.17.3",
    "eslint": "^9",
    "eslint-plugin-obsidianmd": "^0.1.9",
    "globals": "^16.0.0",
    "obsidian": "latest",
    "tslib": "2.4.0",
    "typescript": "5.4.5",
    "typescript-eslint": "^8.35.1"
  }
}
